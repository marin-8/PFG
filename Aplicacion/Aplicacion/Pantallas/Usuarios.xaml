<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PFG.Aplicacion.Usuarios"
    xmlns:pfgcomun="clr-namespace:PFG.Comun;assembly=Comun"
    
    Title="Usuarios">

    <Grid
        ColumnSpacing="0"
        RowSpacing="0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackLayout
            Grid.Column="1"
            Spacing="0">

            <BoxView HeightRequest="20" Color="Transparent"/>

            <StackLayout
                Spacing="0"
                Orientation="Horizontal">

                <Button
                    x:Name="NuevoUsuario"
                    Text="+ Nuevo usuario"
                    FontSize="Large"
                    FontAttributes="Bold"
                    TextColor="Black"
                    BackgroundColor="LimeGreen"
                    Clicked="NuevoUsuario_Clicked"
                    HorizontalOptions="FillAndExpand"/>

                <Button
                    x:Name="Refrescar"
                    Text="R"
                    FontSize="Large"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="Magenta"
                    Clicked="Refrescar_Clicked"
                    WidthRequest="50"
                    Margin="20,0,0,0"/>

            </StackLayout>

            <BoxView HeightRequest="20" Color="Transparent"/>

            <ListView
                x:Name="ListaUsuarios"
                SelectionMode="None"
                HasUnevenRows="True"
                BackgroundColor="Transparent"
                SeparatorVisibility="None">
                
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="pfgcomun:Usuario">
                        <ViewCell>
                            
                            <Frame BackgroundColor="Transparent" Padding="0,10,0,10">
                                <Frame BackgroundColor="LightGray" Padding="10">
                                    <StackLayout Spacing="0" VerticalOptions="EndAndExpand">
                                        <Label FontSize="Medium" Text="{Binding Nombre}" TextColor="Black"></Label>
                                        <Label FontSize="Medium" Text="{Binding NombreUsuario, StringFormat='Nombre de usuario: {0}'}"></Label>
                                        <Label FontSize="Medium" Text="{Binding Rol, StringFormat='Rol: {0}'}"></Label>
                                    </StackLayout>
                                </Frame>
                            </Frame>

                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <BoxView HeightRequest="20" Color="Transparent"/>

        </StackLayout>

    </Grid>

</ContentPage>
