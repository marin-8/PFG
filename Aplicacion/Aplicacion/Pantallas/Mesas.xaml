<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PFG.Aplicacion.Mesas"
    
    Title="Mesas">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Editar Mapa    "
            Order="Primary"
            Priority="0"
            Clicked="EditarMapa"/>
        <ToolbarItem
            Text="Refrescar    "
            Order="Primary"
            Priority="1"
            Clicked="RefrescarMesas"/>
    </ContentPage.ToolbarItems>

    <Grid
        ColumnSpacing="0"
        RowSpacing="0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Grid
            x:Name="MapaGrid"
            Grid.Column="1"
            Grid.Row="1"
            ColumnSpacing="0"
            RowSpacing="0"
            Margin="0"
            Padding="0"/>

    </Grid>

</ContentPage>
