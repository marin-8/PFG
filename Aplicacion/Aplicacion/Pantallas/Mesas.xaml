<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PFG.Aplicacion.Mesas"
    
    Title="Mesas">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Editar Mapa    "
            Order="Primary"
            Priority="0"
            Clicked="EditarMapa"/>
        <ToolbarItem
            Text="Refrescar    "
            Order="Primary"
            Priority="1"
            Clicked="RefrescarMesas"/>
    </ContentPage.ToolbarItems>

    <Grid
        x:Name="MapaGrid"
        ColumnSpacing="0"
        RowSpacing="0"
        Margin="0"
        Padding="20"/>

</ContentPage>
