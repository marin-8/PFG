<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PFG.Aplicacion.Ajustes"
    xmlns:sv="clr-namespace:AiForms.Renderers;assembly=SettingsView"
    
    Title="Ajustes">

    <sv:SettingsView
        HasUnevenRows="true"
        HeaderFontSize="22"
        HeaderTextColor="Black"
        HeaderFontAttributes="Bold"
        HeaderBackgroundColor="Silver">

        <sv:Section
            Title="Artículos">

            <sv:SwitchCell
                x:Name="ComenzarJornadaConArticulosDisponibles"
                PropertyChanged="ComenzarJornadaConArticulosDisponibles_PropertyChanged"
                Title="Comenzar con artículos disponibles"
                TitleFontSize="20"
                TitleColor="Black"
                TitleFontAttributes="Bold"
                Description="Al comenzar la jornada, marcar todos los artículos como disponibles"
                DescriptionFontSize="18"/>

        </sv:Section>

    </sv:SettingsView>

</ContentPage>
